<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="110dp"
            >
            <ImageView
                android:id="@+id/vimg_thumbnail"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:background="@drawable/t1"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:paddingLeft="20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_alignParentLeft="true">

                <TextView
                    android:id="@+id/vchallenge_name"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="challenge name"
                    android:layout_marginTop="5dp"
                    android:textColor="#000"
                    android:textSize="12dp" />
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="29dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:src="@drawable/viewv" />

                    <TextView
                        android:id="@+id/ch_views"
                        android:paddingLeft="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:text="76"
                        android:textColor="#000"
                        android:textSize="7dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="30dp"
                        android:src="@drawable/votev" />

                    <TextView
                        android:id="@+id/ch_votes"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:text="18,55,898"
                        android:textColor="#000"
                        android:textSize="7dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vnickname1"
                        android:layout_width="fill_parent"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="ammu"
                        android:textColor="@color/red"
                        android:textSize="12dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="Vs"
                        android:textColor="#000"
                        android:textSize="10dp" />
                <TextView
                    android:id="@+id/vnickname2"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="sachu"
                    android:textColor="@color/red"
                    android:textSize="12dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:src="@drawable/viewv"/>
                    <TextView
                        android:id="@+id/cvotes"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:text="18,55,898"
                        android:textColor="#000"
                        android:textSize="12dp" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/votev"/>
                    <TextView
                        android:id="@+id/cviews"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="8,55,898"
                        android:textColor="#000"
                        android:textSize="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical">
                <Button
                    style="@style/backgroundborder"
                    android:layout_centerInParent="true"
                    android:text="View"
                    android:id="@+id/vbtnview"
                    android:textSize="13dp"
                    android:textAllCaps="false"
                    android:textColor="@color/red"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </ScrollView>
</LinearLayout>
