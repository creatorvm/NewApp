<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:id="@+id/chlayout"
        android:background="#fff"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:focusableInTouchMode="true"
            android:background="@android:color/transparent"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:hint="@string/edittext_hint1"
            android:id="@+id/challenge_name"
            android:singleLine="true"
            android:textColor="#000"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/transparent_line" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:ellipsize="start"
            android:id="@+id/challenge_category"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="Category"
            android:textColor="#000"
            android:textSize="15sp" />
        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_weight="0.5"-->
        <!--android:layout_marginTop="25dp"-->
        <!--android:text="Category"-->
        <!--android:gravity="center_horizontal"-->
        <!--android:textColor="#000"-->
        <!--android:textSize="10sp" />-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@drawable/transparent_line" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="Challengers"
            android:id="@+id/challengers"
            android:textColor="#000"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"

            android:background="@drawable/transparent_line" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:id="@+id/challenge_peroid"
            android:text="Challenge Period"
            android:textColor="#000"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/transparent_line" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:background="@android:color/transparent"
            android:ellipsize="start"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="Privacy"
            android:id="@+id/challenge_privacy"
            android:textColor="#000"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                style="@style/playerbtn"
                android:ellipsize="start"
                android:text="Make Challenge"
                android:id="@+id/btnmakechallenge"
                android:textColor="#000"
                android:textAllCaps="false"
                android:onClick="upload"
                android:textSize="15sp"/>
        </LinearLayout>
        <Space
            android:layout_width="20dp"
            android:layout_height="20dp"
            />
    </LinearLayout>
</LinearLayout>
