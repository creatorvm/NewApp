<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="roundview">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/colorTextred</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>
    <style name="placechallenge">
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/red_round_view</item>
    </style>
    <style name="roundviewgrey">
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/roundviewgrey</item>
    </style>
    <style name="dance_title">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:text">Dancesterz</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker" tools:targetApi="lollipop">
        <item name="android:colorControlActivated">#ffea00</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarColored" parent="AppTheme">
        <item name="android:textColorSecondary">#666</item>
    </style>
    <style name="playerbtn">
        <item name="android:layout_width">210dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/red_round_view</item>

    </style>
    <style name="votebtn1">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/red_round_view</item>
    </style>
    <style name="backgroundborder">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:text">Select</item>
        <item name="android:background">@drawable/border_roundsquare</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="joinbutton">
        <item name="android:background">@drawable/red_round_view</item>
    </style>
</resources>
